	</view>
   
    <view name="detailed">
      <image name="md_image">
         <origin>0.5 0.5</origin>
         <pos>0.75 0.50</pos>
         <maxSize>0.45 0.45</maxSize>
         <zIndex>2</zIndex>         
      </image>
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>        
         <path>./_inc/images/background_video.png</path>
         <zIndex>1</zIndex>         
